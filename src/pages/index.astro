---
// import Welcome from '../components/Welcome.astro';
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import ProfileCard from "../components/ProfileCard.astro";
import ShowWindow from "../components/ShowWindow.astro";

import headerData from "../data/header.json"; // 导入 header 数据
import worksData from "../data/works.json"; // 导入 作品集 数据
import experimentsData from "../data/experiments.json"; // 导入 试验场 数据

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<Header {...headerData} />
	<ProfileCard />
	<div class="top_work">
		<ShowWindow showTitle="作品集" projectData={worksData} />
		<ShowWindow showTitle="试验场" projectData={experimentsData} />
	</div>
</Layout>

<style>
	.top_work {
		margin-top: 20px;
	}
</style>
